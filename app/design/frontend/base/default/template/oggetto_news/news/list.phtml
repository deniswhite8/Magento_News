?>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php $_news = $this->getNews(); ?>
<div class="page-title news-title">
    <h1><?php echo Mage::helper('oggetto_news')->__('News') ?></h1>
</div>
<?php if ($_news->getSize() > 0) :?>
    <?php echo $this->getPagerHtml(); ?>
    <div class="news-list-container">
    <?php foreach ($_news as $_newsEntity) : ?>
        <div class="news-list-item">
            <a href="<?php echo $_newsEntity->getNewsUrl()?>">
                <?php echo $_newsEntity->getName();?>
            </a><br />
        </div>
    <?php endforeach;?>
    </div>
<?php else : ?>
    <?php echo Mage::helper('oggetto_news')->__('There are no news at this moment');?>
<?php endif;?>
